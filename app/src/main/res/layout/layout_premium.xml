<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_premium"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <TextView
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Choose Your Plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/llWeekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_item_purchase">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbWeek"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/app_color"
                android:buttonTint="@color/radioColor"
                android:clickable="false"
                android:gravity="end" />

            <TextView
                android:id="@+id/txtWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="20dp"
                android:text="@string/weekly"
                android:textColor="#AEACAC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtWeekP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtWeek"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="0dp"
                android:paddingBottom="5dp"
                android:text="$17.99/week"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWeekA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtWeekP"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shape_btn"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="5dp"
                android:text="@string/active"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMonthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_item_purchase">


        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbMonth"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/app_color"
                android:buttonTint="@color/radioColor"
                android:clickable="false"
                android:gravity="end" />

            <TextView
                android:id="@+id/txtMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="20dp"
                android:text="@string/monthly"
                android:textColor="#AEACAC"
                android:textSize="15sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/txtMonthP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMonth"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="0dp"
                android:paddingBottom="5dp"
                android:text="$17.99/month"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtMonthA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMonthP"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shape_btn"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="5dp"
                android:text="@string/active"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llYearly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/selector_item_purchase">

        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rbYear"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/app_color"
                android:buttonTint="@color/radioColor"
                android:clickable="false"
                android:gravity="end" />

            <TextView
                android:id="@+id/txtYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="20dp"
                android:text="@string/yearly"
                android:textColor="#AEACAC"
                android:textSize="15sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/txtYearP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtYear"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:paddingStart="20dp"
                android:paddingTop="3dp"
                android:paddingEnd="0dp"
                android:paddingBottom="5dp"
                android:text="$17.99/year"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtYearA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtYearP"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/shape_btn"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="5dp"
                android:text="@string/active"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBuyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/shape_app_color"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:text="Buy Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>