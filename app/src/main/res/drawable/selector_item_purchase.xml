<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:endColor="@color/bg_color" android:startColor="@color/bg_color" />

            <corners android:radius="@dimen/_5sdp" />

            <stroke android:width="2dp" android:color="@color/app_color" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape>
            <gradient android:endColor="@color/bg_color" android:startColor="@color/bg_color" />

            <corners android:radius="@dimen/_5sdp" />

            <stroke android:width="1.5dp" android:color="#B3B3B3" />
        </shape>
    </item>
</selector>